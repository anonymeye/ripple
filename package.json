{
  "name": "ripplex",
  "version": "0.1.0",
  "private": true,
  "description": "A re-frame inspired state management library for TypeScript",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "test": "npm run test --workspaces",
    "test:core": "npm run test --workspace=@rplx/core",
    "test:react": "npm run test --workspace=@rplx/react",
    "test:angular": "npm run test --workspace=@rplx/angular",
    "test:watch": "npm run test:watch --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:ci": "npm run test:coverage --workspaces -- --ci",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anonymeye/ripplex.git"
  },
  "keywords": [
    "state-management",
    "re-frame",
    "typescript",
    "monorepo",
    "ripplex"
  ],
  "license": "MIT"
}

