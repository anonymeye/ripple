{
  "name": "@rplx/core",
  "version": "0.2.0",
  "description": "A re-frame inspired state management library for TypeScript",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:types": "jest __tests__/type-tests"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^30.2.0",
    "@types/jest": "^30.0.0",
    "expect-type": "^1.3.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "state-management",
    "re-frame",
    "typescript",
    "ripple"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anonymeye/ripplex.git",
    "directory": "packages/ripplex"
  },
  "bugs": {
    "url": "https://github.com/anonymeye/ripplex/issues"
  },
  "homepage": "https://github.com/anonymeye/ripplex#readme",
  "publishConfig": {
    "access": "public"
  }
}
